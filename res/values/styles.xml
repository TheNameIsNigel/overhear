<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DarkTheme" parent="@android:style/Theme.Holo">
        
        <item name="android:actionBarItemBackground">@drawable/selectable_background_darktheme</item>
        <item name="android:popupMenuStyle">@style/darktheme_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/darktheme_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/darktheme_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/darktheme_DropDownNav</item>
        <item name="android:actionBarStyle">@style/darktheme_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_darktheme</item>

    </style>
    
    <style name="darktheme_solid_ActionBar" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_darktheme</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_darktheme</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_darktheme</item>
        <item name="android:progressBarStyle">@style/darktheme_ProgressBar</item>
    </style>

    <style name="darktheme_transparent_ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_darktheme</item>
        <item name="android:progressBarStyle">@style/darktheme_ProgressBar</item>
    </style>

    <style name="darktheme_PopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_darktheme</item>	
    </style>

    <style name="darktheme_DropDownListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_darktheme</item>
    </style>

    <style name="darktheme_ActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_darktheme</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="darktheme_DropDownNav" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_darktheme</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_darktheme</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_darktheme</item>
    </style>
    
    <style name="darktheme_ProgressBar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_darktheme</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.darktheme.widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/darktheme_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/darktheme_DropDownListView</item>
    </style>    
    
	<style name="StatusBarText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">left</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:singleLine">true</item>
	</style>
    <style name="StatusBarButton">
		<item name="android:layout_width">@dimen/status_bar_button_width_height</item>
		<item name="android:layout_height">@dimen/status_bar_button_width_height</item>
		<item name="android:layout_gravity">center|right</item>
		<item name="android:background">?android:listChoiceBackgroundIndicator</item>
	</style>
	
	<style name="NowPlayingViewerButton">
		<item name="android:layout_width">@dimen/now_playing_screen_control</item>
		<item name="android:layout_height">@dimen/now_playing_screen_control</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:padding">10dp</item>
		<item name="android:scaleType">fitCenter</item>
		<item name="android:background">?android:listChoiceBackgroundIndicator</item>
	</style>
	<style name="NowPlayingViewerButtonSecondary" parent="@style/NowPlayingViewerButton">
		<item name="android:layout_width">@dimen/now_playing_screen_control_secondary</item>
		<item name="android:layout_height">@dimen/now_playing_screen_control_secondary</item>
	</style>
	<style name="NowPlayingViewerButtonPrimary" parent="@style/NowPlayingViewerButton">
		<item name="android:layout_width">@dimen/now_playing_screen_control_primary</item>
		<item name="android:layout_height">@dimen/now_playing_screen_control_primary</item>
	</style>
	
</resources>