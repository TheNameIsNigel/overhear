<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DarkTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/DarkTheme.ActionBarStyle</item>
        <item name="android:actionBarWidgetTheme">@style/DarkThemeActionBarItemTextStyle</item>
        <item name="android:actionMenuTextAppearance">@style/DarkThemeActionBarItemTextStyle</item>
    </style>
    <style name="DarkTheme.ActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/DarkTheme.ActionBar.TitleTextStyle</item>
    </style>
    <style name="DarkTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="DarkThemeActionBarItemTextStyle">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


	<style name="StatusBarText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">left</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:singleLine">true</item>
	</style>
    <style name="StatusBarButton">
		<item name="android:layout_width">@dimen/status_bar_button_width_height</item>
		<item name="android:layout_height">@dimen/status_bar_button_width_height</item>
		<item name="android:layout_gravity">center|right</item>
		<item name="android:background">?android:listChoiceBackgroundIndicator</item>
	</style>
	<style name="NowPlayingViewerButton">
		<item name="android:layout_width">@dimen/now_playing_screen_control</item>
		<item name="android:layout_height">@dimen/now_playing_screen_control</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:background">?android:listChoiceBackgroundIndicator</item>
	</style>
</resources>