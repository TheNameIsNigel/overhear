<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
	android:layout_height="match_parent" tools:context=".NowPlayingViewer">

	<ImageView android:id="@+id/cover" android:layout_width="fill_parent"
		android:layout_height="@dimen/now_playing_screen_cover"
		android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
		android:scaleType="fitXY" android:layout_above="@+id/track" />

	<TextView android:id="@+id/track" android:layout_width="wrap_content"
		android:layout_marginTop="10dp" android:layout_height="wrap_content"
		android:layout_above="@+id/artistAlbum" android:layout_marginLeft="15dp"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView android:id="@+id/artistAlbum" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_above="@+id/meta"
		android:layout_marginLeft="15dp" />

	<RelativeLayout android:id="@+id/meta"
		android:layout_width="fill_parent" android:paddingTop="10dp"
		android:paddingBottom="10dp" android:paddingLeft="15dp"
		android:paddingRight="15dp" android:layout_height="wrap_content"
		android:layout_above="@+id/divider">

		<TextView android:id="@+id/progress" android:layout_width="wrap_content"
			android:layout_centerVertical="true" android:layout_alignParentLeft="true"
			android:textColor="@color/white" android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall" />

		<SeekBar android:id="@+id/seek" android:layout_width="match_parent"
			android:layout_marginLeft="4dp" android:layout_marginRight="4dp"
			android:layout_height="wrap_content" android:layout_toRightOf="@+id/progress"
			android:layout_toLeftOf="@+id/remaining" />

		<TextView android:id="@+id/remaining" android:layout_width="wrap_content"
			android:layout_centerVertical="true" android:layout_alignParentRight="true"
			android:textColor="@color/white" android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall" />

	</RelativeLayout>

	<View android:id="@+id/divider" android:background="@android:color/holo_blue_light"
		android:layout_above="@+id/controls" android:layout_width="fill_parent"
		android:layout_height="2dp" />

	<LinearLayout android:id="@+id/controls"
		android:layout_centerHorizontal="true" android:layout_width="@dimen/now_playing_screen_controls"
		android:layout_height="wrap_content" android:gravity="center_horizontal"
		android:orientation="horizontal" android:layout_alignParentBottom="true">

		<ImageButton android:id="@+id/previous" style="@style/NowPlayingViewerButton"
			android:src="@drawable/previous" android:layout_weight="1" />

		<ImageButton android:id="@+id/play" style="@style/NowPlayingViewerButton"
			android:src="@drawable/play" android:layout_weight="1" />

		<ImageButton android:id="@+id/next" style="@style/NowPlayingViewerButton"
			android:src="@drawable/next" android:layout_weight="1" />

	</LinearLayout>

</RelativeLayout>