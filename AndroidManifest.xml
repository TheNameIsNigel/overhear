<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.afollestad.overhear" android:versionCode="1"
	android:versionName="0.1 Beta">

	<uses-sdk android:minSdkVersion="15" android:targetSdkVersion="17" />

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<application android:allowBackup="true" android:icon="@drawable/launcher"
		android:label="@string/app_name" android:theme="@android:style/Theme.Holo">

		<activity android:name="com.afollestad.overhear.ui.OverviewScreen"
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="com.afollestad.overhear.ui.AlbumViewer"
			android:configChanges="keyboardHidden|orientation|screenSize" />
		<activity android:name="com.afollestad.overhear.ui.ArtistViewer"
			android:configChanges="keyboardHidden|orientation|screenSize" />
		<activity android:name="com.afollestad.overhear.ui.LoginHandler"
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:hardwareAccelerated="true" android:label="@string/login_str" />
		<activity android:name="com.afollestad.overhear.ui.GenreViewer"
			android:configChanges="keyboardHidden|orientation|screenSize" />

		<service android:name="com.afollestad.overhear.MusicService"
			android:enabled="true" android:exported="false" />
		<receiver android:name="com.afollestad.overhear.MediaButtonIntentReceiver">
			<intent-filter>
				<action android:name="android.intent.action.MEDIA_BUTTON" />
			</intent-filter>
		</receiver>

	</application>

</manifest>