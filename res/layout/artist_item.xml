<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.afollestad.aimage.views.SquareAImageView android:id="@+id/image" android:layout_width="@dimen/gridview_image"
        android:layout_height="@dimen/gridview_image" android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height" android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/image" android:layout_alignRight="@+id/image"
        android:background="@color/black_transparent">

        <TextView android:id="@+id/title" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:layout_alignParentLeft="true"
                  android:layout_toLeftOf="@+id/peak_one" android:shadowColor="#000000"
                  android:shadowDx="2" android:shadowDy="2" android:shadowRadius="4"
                  android:singleLine="true" android:textColor="#FFFFFF"
                  android:layout_centerVertical="true" android:textStyle="bold"
                  android:textSize="15sp" android:fontFamily="sans-serif-condensed"/>

        <ImageView android:id="@+id/peak_one" android:layout_width="wrap_content"
                   android:layout_height="wrap_content" android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp" android:layout_toLeftOf="@+id/peak_two" />

        <ImageView android:id="@+id/peak_two" android:layout_width="wrap_content"
                   android:layout_height="wrap_content" android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>